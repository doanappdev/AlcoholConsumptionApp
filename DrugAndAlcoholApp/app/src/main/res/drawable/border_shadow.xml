<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- dropshadow -->

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:color="#7000"
                android:width="1dp" />
            <!--
                setting the thickness of shadow
                (positive value will give shadow on that side)
            -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:top="1.8dp"
                android:right="0dp"/>
            <corners android:radius="0dp" />
        </shape>

    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white1" />

        </shape>
    </item>
</layer-list>