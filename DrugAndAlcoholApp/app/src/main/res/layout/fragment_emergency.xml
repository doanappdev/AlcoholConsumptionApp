<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context="uc.edu.itp.drugandalcohol.fragments.EmergencyFragment"
    android:id="@+id/layoutFrag">

    <!--
        This text view is to help identify where the fragment begin.
        It will be removed later
    -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Fragment - Emergency SMS"
        android:background="@color/white2"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/textView2" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2">

        <Button
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Send"
            android:id="@+id/button4"
            android:layout_gravity="right|bottom" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/white1"
            android:showDividers="beginning|middle|end"
            android:divider="@color/md_red_500">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:showDividers="beginning|middle|end"
                android:visibility="visible"
                android:divider="@color/md_blue_grey_900"
                android:id="@+id/">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal|top" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=" Number"
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:phoneNumber="true"
                    android:layout_gravity="left|top" />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Message"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:background="@color/white1" />

        <Button
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Change Contact"
            android:id="@+id/button2"
            android:layout_gravity="right|top"
            android:layout_column="17" />

        <Button
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="Change Message"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>

    <!-- Todo: add code here for the emergency SMS layout -->

</RelativeLayout>
