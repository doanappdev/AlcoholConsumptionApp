<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uc.edu.itp.drugandalcohol.view.GameOverActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/md_orange_600"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="0.40"
        android:weightSum="1">

        <TextView
            android:text="Game Over Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="#ff1c64ff"
            android:gravity="center_horizontal"
            android:id="@+id/txtGameOverHeading" />

        <ImageView
            android:id="@+id/imgViewBeer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@drawable/beer2_icon"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:text="Score - XXXXX"
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textColor="#4F66C9"
                android:gravity="center_horizontal"
                android:layout_weight="0.5" />

            <TextView
                android:text="Time Spent - XX:XX"
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:textColor="#4F66C9"
                android:gravity="center_horizontal"
                android:layout_weight="0.5" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Hits - XXX"
                android:id="@+id/txtHits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0099CC"
                android:gravity="center_horizontal"
                android:layout_weight="0.3" />

            <TextView
                android:text="Misses - XXX"
                android:id="@+id/txtMisses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0099CC"
                android:gravity="center_horizontal"
                android:layout_weight="0.3"/>

            <TextView
                android:text="Hit TNT - YXN"
                android:id="@+id/txtHitTNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0099CC"
                android:gravity="center_horizontal"
                android:layout_weight="0.4"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="#ff1c64ff">

        <!-- icon row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnHighScore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/send_sms_48"
                android:background="@drawable/btn_state_gold"/>

            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/close_cross_48"
                android:background="@drawable/btn_state_gold"/>

        </LinearLayout>

        <!-- text row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewHighScore"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:text="High Score"
                android:textSize="20dp"
                android:layout_weight="1"

                android:textColor="@color/white1"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtViewBack"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="20dp"
                android:textColor="@color/white1"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
