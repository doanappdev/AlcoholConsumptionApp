<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uc.edu.itp.drugandalcohol.fragments.TabSpiritsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--
                begin spirits row 1
            -->
            <LinearLayout
                android:id="@+id/lLayoutSpiritsRow1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                >

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgViewSpirits1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/spirits_330ml"
                        />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpiritsRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginRight="@dimen/border_width"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewSpirits1A"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="Ready to Drink (Full Strength)"
                        android:textSize="16sp"
                        android:textColor="@color/md_font_54_percent_black"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/txtViewSpirits1B"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="330ml (5% Alc. Vol)"
                        android:textColor="@color/md_font_87_percent_black"
                        android:gravity="top"/>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <TextView
                        android:id="@+id/txtViewSpiritsInput1"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_blue_a200"
                        android:textSize="32sp"
                        android:layout_gravity="right|center_vertical" />


                </FrameLayout>

            </LinearLayout>

            <View
                android:id="@+id/dividerSpirits1"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lLayoutSpiritsRow1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="@dimen/border_width"
                android:layout_marginEnd="@dimen/border_width"
                android:background="@android:color/darker_gray"

                />

            <!--
                begin spirits row 2
            -->
            <LinearLayout
                android:id="@+id/lLayoutSpiritsRow2"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/dividerSpirits1">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgViewSpirits2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/spirit_30ml"
                        />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpiritsRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginRight="@dimen/border_width"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewSpirits2A"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="Spirit Shoot (High Strength)"
                        android:textSize="16sp"
                        android:textColor="@color/md_font_54_percent_black"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/txtViewSpirits2B"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="30ml (40% Alc. Vol)"
                        android:textColor="@color/md_font_87_percent_black"
                        android:gravity="top"/>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <TextView
                        android:id="@+id/txtViewSpiritsInput2"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_blue_a200"
                        android:textSize="32sp"
                        android:layout_gravity="end|center_vertical" />


                </FrameLayout>

            </LinearLayout>

            <View
                android:id="@+id/dividerSpirits2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lLayoutSpiritsRow2"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="@dimen/border_width"
                android:layout_marginEnd="@dimen/border_width"
                android:background="@android:color/darker_gray"

                />

            <!--
                begin spirits row 3
            -->
            <LinearLayout
                android:id="@+id/lLayoutSpiritsRow3"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/dividerSpirits2">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgViewSpirits3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/spirits_pre_mix_375ml"
                        />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpiritsRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginRight="@dimen/border_width"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewSpirits3A"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="Pre-Mix Spirits (Full Strength)"
                        android:textSize="16sp"
                        android:textColor="@color/md_font_54_percent_black"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/txtViewSpirits3B"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="375ml (5% Alc. Vol)"
                        android:textColor="@color/md_font_87_percent_black"
                        android:gravity="top"/>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <TextView
                        android:id="@+id/txtViewSpiritsInput3"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_blue_a200"
                        android:textSize="32sp"

                        android:layout_gravity="end|center_vertical" />


                </FrameLayout>

            </LinearLayout>

            <View
                android:id="@+id/dividerSpirits3"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lLayoutSpiritsRow3"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="@dimen/border_width"
                android:layout_marginEnd="@dimen/border_width"
                android:background="@android:color/darker_gray"

                />

            <!--
                begin spirits row 4
            -->
            <LinearLayout
                android:id="@+id/lLayoutSpiritsRow4"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/dividerSpirits3">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgViewSpirits4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/spirits_pre_mix_300ml"
                        />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpiritsRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginRight="@dimen/border_width"
                    android:layout_marginEnd="@dimen/border_width"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewSpirits4A"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="Pre-Mix (High Strength)"
                        android:textSize="16sp"
                        android:textColor="@color/md_font_54_percent_black"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/txtViewSpirits4B"
                        android:layout_width="fill_parent"
                        android:layout_height="36dp"
                        android:text="300ml (7% Alc. Vol)"
                        android:textColor="@color/md_font_87_percent_black"
                        android:gravity="top"/>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <TextView
                        android:id="@+id/txtViewSpiritsInput4"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/md_blue_a200"
                        android:textSize="32sp"
                        android:layout_gravity="end|center_vertical" />


                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
