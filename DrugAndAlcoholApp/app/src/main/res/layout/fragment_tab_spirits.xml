<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uc.edu.itp.drugandalcohol.fragments.TabSpiritsFragment">

    <!--
        begin beer heading row 0
     -->

    <LinearLayout
        android:id="@+id/linearLayoutRow0"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"

        >

        <TextView
            android:id="@+id/txtViewSpiritsType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/border_width"
            android:layout_marginRight="@dimen/border_width"
            android:text="Type"
            android:textColor="@color/md_font_87_percent_black"
            android:textSize="16dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/linearLayoutRow0" />

    <!--
        begin beer row 1
    -->
    <LinearLayout
        android:id="@+id/linearLayoutRow1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/view1">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgViewBeer1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/spirits_330ml"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/border_width"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="Ready to Drink (Full Strength)"
                android:textSize="16sp"
                android:textColor="@color/md_font_54_percent_black"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="330ml (5% Alc. Vol)"
                android:textColor="@color/md_font_87_percent_black"
                android:gravity="top"/>


        </LinearLayout>

        <!--
            to support API lower than 15 use layoutMarginRight=""
        -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/txtViewSpiritsInput1"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/md_blue_a200"
                android:textSize="32sp"
                android:layout_gravity="right|center_vertical" />


        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/linearLayoutRow1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"

        />

    <!--
        begin beer row 2
    -->
    <LinearLayout
        android:id="@+id/lLayoutSpiritsRow2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/divider1">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgViewBeer2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/spirit_30ml"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/border_width"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="Spirit Shoot (High Strength)"
                android:textSize="16sp"
                android:textColor="@color/md_font_54_percent_black"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="30ml (40% Alc. Vol)"
                android:textColor="@color/md_font_87_percent_black"
                android:gravity="top"/>


        </LinearLayout>

        <!--
            to support API lower than 15 use layoutMarginRight=""
        -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/txtViewSpiritsInput2"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/md_blue_a200"
                android:textSize="32sp"
                android:layout_gravity="end|center_vertical" />


        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lLayoutSpiritsRow2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"

        />

    <!--
        begin row 3
    -->
    <LinearLayout
        android:id="@+id/lLayoutBeerRow3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/divider2">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgViewBeer3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/spirits_pre_mix_375ml"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/border_width"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="Pre-Mix Spirits (Full Strength)"
                android:textSize="16sp"
                android:textColor="@color/md_font_54_percent_black"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="375ml (5% Alc. Vol)"
                android:textColor="@color/md_font_87_percent_black"
                android:gravity="top"/>


        </LinearLayout>

        <!--
            to support API lower than 15 use layoutMarginRight=""
        -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/txtViewSpiritsInput3"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/md_blue_a200"
                android:textSize="32sp"

                android:layout_gravity="end|center_vertical" />


        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lLayoutBeerRow3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"

        />

    <!--
        begin row 4
    -->
    <LinearLayout
        android:id="@+id/lLayoutBeerRow4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/divider3">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgViewBeer4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/spirits_pre_mix_300ml"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginRight="@dimen/border_width"
            android:layout_marginEnd="@dimen/border_width"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="Pre-Mix (High Strength)"
                android:textSize="16sp"
                android:textColor="@color/md_font_54_percent_black"
                android:gravity="bottom"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="300ml (7% Alc. Vol)"
                android:textColor="@color/md_font_87_percent_black"
                android:gravity="top"/>


        </LinearLayout>

        <!--
            to support API lower than 15 use layoutMarginRight=""
        -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/txtViewSpiritsInput4"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/md_blue_a200"
                android:textSize="32sp"

                android:layout_gravity="end|center_vertical" />


        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
