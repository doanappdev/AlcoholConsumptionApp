<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/border_width"
    tools:context="uc.edu.itp.drugandalcohol.fragments.UserDetailsFragment">

   <!--
        This text view is here to help you identify
        where the fragment begins and ends in the activity
        we will remove this later


    <TextView
        android:id="@+id/txtViewDetailsH1"
        android:text="Fragment - User Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

         />
   -->

    <!-- age & weight -->
    <LinearLayout
        android:id="@+id/lLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editTxtAge"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:inputType="number"
            android:background="#FFF"
            android:hint="User age"
            android:textColor="@color/md_font_54_percent_black" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"
            />


        <EditText
            android:id="@+id/editTxtWeight"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:inputType="number"
            android:background="#FFF"
            android:hint="User weight"
            android:textColor="@color/md_font_54_percent_black"/>

    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lLayout1"
        android:layout_marginLeft="16dp"
        android:background="@android:color/darker_gray"

        />

    <LinearLayout
        android:id="@+id/lLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtViewGender1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:text="Gender"
            android:textSize="16sp"
            android:layout_gravity="top" />

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="female"
            android:textOn="male"
            android:textColor="@color/md_font_54_percent_black"
            android:id="@+id/switchMale"
            android:layout_marginLeft="56dp"
            android:checked="true"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayout2"
        android:orientation="horizontal">




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/btnAccept"
            android:text="ACCEPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/btn_state_user_details"/>

        <Button
            android:id="@+id/btnCancel"
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnAccept"
            android:layout_toStartOf="@+id/btnAccept"
            android:layout_margin="8dp"
            android:background="@drawable/btn_state_user_details"/>


        <Button
            android:id="@+id/btnEdit"
            android:text="EDIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_state_user_details"
            />

    </RelativeLayout>


</RelativeLayout>
