<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_display_bac"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_shadow">

    <!--
    <View
        android:id="@+id/viewBorder"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/border_shadow" />
    -->


    <TextView
        android:id="@+id/txtViewSubHeadingDisplayBAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your BAC is:"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/txtViewDisplayBAC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/border_width"
        android:layout_marginBottom="@dimen/border_width"/>

    <TextView
        android:id="@+id/txtViewDisplayBAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="34sp"
        android:layout_toEndOf="@+id/txtViewSubHeadingDisplayBAC"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtViewSubHeadingDisplayBAC"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="@dimen/border_width"
        android:layout_marginBottom="@dimen/border_width"/>


</RelativeLayout>
