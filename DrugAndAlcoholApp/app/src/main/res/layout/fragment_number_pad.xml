<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/border_width"
    tools:context="uc.edu.itp.drugandalcohol.fragments.NumberPadFragment">

    <Button
        android:id="@+id/btnExit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="X"
        android:textSize="40sp"
        android:textColor="#000"
        android:background="@drawable/oval"/>

    <LinearLayout
        android:id="@+id/lLayoutRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExit">

        <Button
            android:id="@+id/btnNothing"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="X"
            android:textSize="40sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:visibility="invisible"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lLayoutRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutRow1"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnNum7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="52sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="10dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="52sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="52sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayoutRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutRow2"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnNum4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayoutRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutRow3"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnNum1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="48sp"
            android:textColor="#000"
            android:background="@drawable/oval"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayoutRow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutRow4"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Clear"
            android:textSize="24sp"
            android:textColor="#000"
            android:padding="5dp"
            android:background="@drawable/oval"/>

        <Button
            android:id="@+id/btnNum0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="34sp"
            android:textColor="#000"
            android:padding="5dp"
            android:background="@drawable/oval"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="24sp"
            android:textColor="#000"
            android:padding="5dp"
            android:background="@drawable/oval"/>
    </LinearLayout>




</RelativeLayout>
